<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="2dp"
        android:layout_margin="@dimen/margin"
        app:cardCornerRadius="3dp"
        android:clickable="true"
        android:focusable="true">

    <TextView
            android:text="Nama"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_nama_detail"
            app:layout_constraintStart_toEndOf="@+id/iv_profilePic_detail"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            app:layout_constraintTop_toTopOf="@+id/iv_profilePic_detail"
            android:textSize="12sp"/>
    <TextView
            android:text="Kategori"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_kategori_detail"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_nama_detail"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="@+id/tv_nama_detail"/>
    <TextView
            android:text="Date Create"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_dateCreate_detail"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="@+id/iv_profilePic_detail"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:textSize="8sp"/>
    <TextView
            android:text="Judul"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_judul_detail"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/iv_profilePic_detail"
            android:textStyle="bold"/>
    <TextView
            android:text="Deskripsi"
            android:layout_width="368dp"
            android:layout_height="wrap_content"
            android:id="@+id/tv_deskripsi_detail"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_judul_detail"
            android:textSize="10sp"
            android:textColor="@color/colorGrey" android:lines="3" android:maxLines="6"
            app:layout_constraintStart_toStartOf="@+id/tv_judul_detail"
    />
    <TextView
            android:text="Jumlah waktu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_jumlahWaktu_detail"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_deskripsi_detail"
            app:layout_constraintStart_toStartOf="@+id/tv_deskripsi_detail"
            android:textStyle="bold"/>
    <ImageView
            android:layout_width="27dp"
            android:layout_height="27dp"
            tools:srcCompat="@tools:sample/avatars"
            android:id="@+id/iv_profilePic_detail"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"/>
    <Button
            android:text="Terima"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_terima"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_jumlahWaktu_detail"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"/>
</android.support.constraint.ConstraintLayout>